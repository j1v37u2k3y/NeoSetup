# ============================================================================
# BASE THEME COLORS - Clean and Simple
# ============================================================================

# Color palette
%hidden BASE_BLACK="#1c1c1c"
%hidden BASE_WHITE="#ffffff"
%hidden BASE_GRAY="#444444"
%hidden BASE_LIGHT_GRAY="#888888"
%hidden BASE_BLUE="#0087ff"

# Status bar colors
set -g status-style "bg=$BASE_GRAY,fg=$BASE_WHITE"
set -g status-justify {{ tmux_config.status_bar.justify | default('left') }}

# Window status colors
set -g window-status-current-style "bg=$BASE_BLUE,fg=$BASE_WHITE,bold"
set -g window-status-style "bg=$BASE_BLACK,fg=$BASE_LIGHT_GRAY"
set -g window-status-activity-style "bg=$BASE_LIGHT_GRAY,fg=$BASE_BLACK"

# Pane border colors
set -g pane-border-style "fg=$BASE_GRAY"
set -g pane-active-border-style "fg=$BASE_BLUE"

# Command line colors
set -g message-style "bg=$BASE_BLUE,fg=$BASE_WHITE"
set -g message-command-style "bg=$BASE_GRAY,fg=$BASE_WHITE"

# Mode colors
set -g mode-style "bg=$BASE_BLUE,fg=$BASE_WHITE"

# Clock color
set -g clock-mode-colour "$BASE_BLUE"
set -g clock-mode-style 24
